@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow mb-4">
                <div class="card-body py-5">
                    <i class="fas fa-cog fa-4x text-primary mb-4"></i>
                    <h1 class="display-4 mb-3">Admin Dashboard</h1>
                    <p class="lead mb-4">Welcome, Admin! Use the links below to manage the application.</p>
                    <div class="row row-cols-1 row-cols-md-2 g-4 mt-4">
                        <div class="col">
                            <a asp-controller="Staff" asp-action="Index" class="card h-100 text-decoration-none text-dark shadow-sm">
                                <div class="card-body">
                                    <i class="fas fa-users fa-2x mb-2 text-primary"></i>
                                    <h5 class="card-title">Manage Staff</h5>
                                    <p class="card-text">View and edit staff members.</p>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a asp-controller="Services" asp-action="Index" class="card h-100 text-decoration-none text-dark shadow-sm">
                                <div class="card-body">
                                    <i class="fas fa-scissors fa-2x mb-2 text-success"></i>
                                    <h5 class="card-title">Manage Services</h5>
                                    <p class="card-text">View and edit salon services.</p>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a asp-controller="Booking" asp-action="Index" class="card h-100 text-decoration-none text-dark shadow-sm">
                                <div class="card-body">
                                    <i class="fas fa-calendar-check fa-2x mb-2 text-warning"></i>
                                    <h5 class="card-title">Manage Bookings</h5>
                                    <p class="card-text">View and manage appointments.</p>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a asp-controller="Admin" asp-action="Users" class="card h-100 text-decoration-none text-dark shadow-sm">
                                <div class="card-body">
                                    <i class="fas fa-user-shield fa-2x mb-2 text-danger"></i>
                                    <h5 class="card-title">Manage Users</h5>
                                    <p class="card-text">View and manage user accounts.</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>