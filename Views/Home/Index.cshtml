@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-banner text-white text-center d-flex flex-column justify-content-center align-items-center fade-in-section" style="background: linear-gradient(120deg, #434a54 0%, #6c7a89 100%); min-height: 380px;">
    <div class="container py-5">
        <h1 class="display-3 fw-bold mb-3">Premium Grooming Experience</h1>
        <p class="lead mb-4">Transform your look with our expert barbers and stylists in the heart of Sandton</p>
        <a asp-controller="Booking" asp-action="Index" class="btn btn-light btn-lg px-5 py-2 mt-2 border border-2 hero-book-btn" style="color:#333; font-weight:600;">Book Now</a>
    </div>
</section>

<!-- Welcome Section -->
<section class="welcome-section bg-white py-5 fade-in-section">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-7">
                <h2 class="fw-bold mb-3">Welcome to Groom & Glow</h2>
                <p class="mb-4 text-secondary">Located in the prestigious Sandton district, Groom & Glow offers the finest grooming services in South Africa. Our skilled team combines traditional barbering techniques with modern styling to deliver exceptional results.<br><br>From classic cuts to contemporary styles, beard grooming to luxury treatments, we provide a complete grooming experience that leaves you looking and feeling your absolute best.</p>
                <div class="d-flex gap-4 mt-3">
                    <span class="text-success"><i class="fa fa-check-circle me-2"></i>Expert Stylists</span>
                    <span class="text-success"><i class="fa fa-check-circle me-2"></i>Premium Products</span>
                </div>
            </div>
            <div class="col-lg-5 text-center">
                <img src="/images/studio-img.png" alt="Salon Interior" class="img-fluid rounded-3 shadow" style="max-width: 400px;">
            </div>
        </div>
    </div>
</section>

<!-- Quick Access -->
<section class="quick-access-section py-5 bg-light fade-in-section">
    <div class="container">
        <h3 class="fw-bold text-center mb-4">Quick Access</h3>
        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <div class="quick-card text-center p-4 rounded-3 h-100 bg-white shadow-sm">
                    <div class="mb-3"><i class="fa fa-scissors fa-2x"></i></div>
                    <h5 class="fw-bold mb-2">Services</h5>
                    <p class="text-muted mb-3">Explore our full range of grooming services</p>
                    <a asp-controller="Services" asp-action="Index" class="stretched-link fw-semibold">Learn More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quick-card text-center p-4 rounded-3 h-100 bg-white shadow-sm">
                    <div class="mb-3"><i class="fa fa-calendar-alt fa-2x"></i></div>
                    <h5 class="fw-bold mb-2">Booking</h5>
                    <p class="text-muted mb-3">Schedule your appointment online</p>
                    <a asp-controller="Booking" asp-action="Index" class="stretched-link fw-semibold">Book Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quick-card text-center p-4 rounded-3 h-100 bg-white shadow-sm">
                    <div class="mb-3"><i class="fa fa-users fa-2x"></i></div>
                    <h5 class="fw-bold mb-2">Our Team</h5>
                    <p class="text-muted mb-3">Meet our skilled professionals</p>
                    <a asp-controller="Staff" asp-action="Index" class="stretched-link fw-semibold">View Team</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Services -->
<section class="featured-services-section py-5 fade-in-section">
    <div class="container">
        <h3 class="fw-bold text-center mb-4">Featured Services</h3>
        <div class="row g-4 justify-content-center">
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="images/classic-haircut.png" class="img-fluid rounded-3 shadow" style="max-width: 400px;" alt="Classic Haircut">
                    <div class="card-body">
                        <h6 class="fw-bold">Classic Haircut</h6>
                        <p class="text-muted small mb-2">Precision cuts tailored to your style</p>
                        <div class="fw-bold">R180</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="images/beard-grooming.png" class="img-fluid rounded-3 shadow" style="max-width: 400px;" alt="Beard Grooming">
                    <div class="card-body">
                        <h6 class="fw-bold">Beard Grooming</h6>
                        <p class="text-muted small mb-2">Expert beard shaping and styling</p>
                        <div class="fw-bold">R120</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="images/hot-towel-shave.png" class="img-fluid rounded-3 shadow" style="max-width: 400px;" alt="Hot Towel Shave">
                    <div class="card-body">
                        <h6 class="fw-bold">Hot Towel Shave</h6>
                        <p class="text-muted small mb-2">Traditional luxury shaving experience</p>
                        <div class="fw-bold">R150</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="images/hair-styling.png" class="img-fluid rounded-3 shadow" style="max-width: 400px;" alt="Hair Styling">
                    <div class="card-body">
                        <h6 class="fw-bold">Hair Styling</h6>
                        <p class="text-muted small mb-2">Modern styles and treatments</p>
                        <div class="fw-bold">R200</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 