@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">Contact Us</h1>
            <p class="text-center text-muted mb-5">Get in touch with Groom & Glow for appointments, questions, or feedback.</p>
        </div>
    </div>

    <div class="row">
        <!-- Contact Form -->
        <div class="col-lg-6 mb-5">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4"><i class="fas fa-envelope text-primary me-2"></i>Send us a Message</h3>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Full Name *</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address *</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <select class="form-select" id="subject" name="subject">
                                <option value="">Select a subject...</option>
                                <option value="appointment">Appointment Inquiry</option>
                                <option value="service">Service Question</option>
                                <option value="feedback">Feedback</option>
                                <option value="general">General Inquiry</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message *</label>
                            <textarea class="form-control" id="message" name="message" rows="5" required placeholder="Tell us how we can help you..."></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Contact Information -->
        <div class="col-lg-6 mb-5">
            <div class="card shadow h-100">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4"><i class="fas fa-info-circle text-primary me-2"></i>Contact Information</h3>
                    <div class="mb-4">
                        <h6 class="fw-bold"><i class="fas fa-map-marker-alt text-primary me-2"></i>Address</h6>
                        <p class="text-muted mb-0">
                            123 Rivonia Road<br>
                            Sandton<br>
                            Johannesburg, 2196<br>
                            South Africa
                        </p>
                    </div>
                    <div class="mb-4">
                        <h6 class="fw-bold"><i class="fas fa-phone text-primary me-2"></i>Phone</h6>
                        <p class="text-muted mb-0">
                            <a href="tel:+27112345678" class="text-decoration-none">+27 11 234 5678</a>
                        </p>
                    </div>
                    <div class="mb-4">
                        <h6 class="fw-bold"><i class="fas fa-envelope text-primary me-2"></i>Email</h6>
                        <p class="text-muted mb-0">
                            <a href="mailto:info@groomandglow.co.za" class="text-decoration-none">info@groomandglow.co.za</a>
                        </p>
                    </div>
                    <div class="mb-4">
                        <h6 class="fw-bold"><i class="fas fa-clock text-primary me-2"></i>Operating Hours</h6>
                        <div class="row">
                            <div class="col-6">
                                <small class="text-muted">Mon â€“ Sat</small><br>
                                <small class="fw-bold">8:00 AM - 6:00 PM</small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Sunday</small><br>
                                <small class="fw-bold">Closed</small>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <h6 class="fw-bold"><i class="fas fa-share-alt text-primary me-2"></i>Follow Us</h6>
                        <div class="d-flex gap-3">
                            <a href="#" class="text-decoration-none">
                                <i class="fab fa-facebook fa-2x text-primary"></i>
                            </a>
                            <a href="#" class="text-decoration-none">
                                <i class="fab fa-instagram fa-2x text-danger"></i>
                            </a>
                            <a href="#" class="text-decoration-none">
                                <i class="fab fa-twitter fa-2x text-info"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Google Maps -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body p-0">
                    <h5 class="card-title p-4 mb-0"><i class="fas fa-map text-primary me-2"></i>Find Us</h5>
                    <div class="ratio ratio-21x9">
                        <iframe src="https://www.google.com/maps?q=123+Rivonia+Road,+Sandton,+Johannesburg,+South+Africa&output=embed" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    .social-icon {
        transition: transform 0.2s ease-in-out;
    }
    
    .social-icon:hover {
        transform: scale(1.1);
    }
</style> 