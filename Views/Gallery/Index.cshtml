@model IEnumerable<object>

@{
    ViewData["Title"] = "Gallery";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">Our Gallery</h1>
            <p class="text-center text-muted mb-5">Take a look at our work and salon environment.</p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (dynamic image in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@image.ImageUrl" class="card-img-top" alt="@image.Title" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@image.Title</h5>
                        <p class="card-text">@image.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <button class="btn btn-outline-primary btn-sm w-100" onclick="openImageModal('@image.ImageUrl', '@image.Title')">
                            <i class="fas fa-expand me-2"></i>View Larger
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" alt="">
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .card-img-top {
        transition: filter 0.2s ease-in-out;
    }
    
    .card:hover .card-img-top {
        filter: brightness(1.1);
    }
    
    .modal-content {
        border-radius: 15px;
        border: none;
    }
</style>

<script>
    function openImageModal(imageUrl, title) {
        document.getElementById('modalImage').src = imageUrl;
        document.getElementById('imageModalLabel').textContent = title;
        var modal = new bootstrap.Modal(document.getElementById('imageModal'));
        modal.show();
    }
</script> 