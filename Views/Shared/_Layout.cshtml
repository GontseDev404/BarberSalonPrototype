<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Groom & Glow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="images/Groom & Glow logo.png" alt="Barber Salon Logo" style="height:32px; width:auto; display:inline-block; vertical-align:middle;">
                    <span class="nav-link p-0" style="font-weight:500;">Groom & Glow</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Booking" asp-action="Index">Booking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Index">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Staff" asp-action="Index">Our Team</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main style="padding-top: 80px;">
        @RenderBody()
    </main>

    <footer class="border-top mt-5 py-5">
        <div class="container">
            <div class="row">
                <!-- Contact Info -->
                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">Contact Info</h5>
                    <div class="contact-info">
                        <p class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> 123 Rivonia Road, Sandton, Johannesburg</p>
                        <p class="mb-2"><i class="fas fa-phone me-2"></i> +27 11 234 5678</p>
                        <p class="mb-2"><i class="fas fa-envelope me-2"></i> info@groomandglow.co.za</p>
                        <p class="mb-0"><i class="fas fa-clock me-2"></i> Mon-Sat: 8AM-6PM</p>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Services")" class="text-decoration-none">Services</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Booking")" class="text-decoration-none">Booking</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Gallery")" class="text-decoration-none">Gallery</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Staff")" class="text-decoration-none">Our Team</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "About")" class="text-decoration-none">About Us</a></li>
                        <li class="mb-0"><a href="@Url.Action("Index", "Contact")" class="text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                
                <!-- Social Media -->
                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">Follow Us</h5>
                    <div class="social-icons">
                        <a href="#" class="me-3 fs-4"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="me-3 fs-4"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="me-3 fs-4"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="fs-4"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>
            </div>
            
            <div class="row border-top pt-4 mt-4">
                <div class="col-12 text-center">
                    <p class="mb-0">&copy; 2025 Groom & Glow - All rights reserved</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 