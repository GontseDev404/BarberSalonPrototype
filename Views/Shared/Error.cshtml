@model BarberSalonPrototype.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body py-5">
                    <i class="fas fa-times-circle fa-4x text-danger mb-4"></i>
                    <h1 class="display-4 text-danger">Error</h1>
                    <h2 class="mb-4">An error occurred while processing your request.</h2>
                    @if (Model.ShowRequestId)
                    {
                        <p class="lead text-muted mb-4">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-md-2">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-envelope me-2"></i>Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 